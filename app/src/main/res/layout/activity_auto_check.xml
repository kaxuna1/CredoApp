<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="#e2e2e2"
    tools:context="credo.ge.credoapp.AutoCheckActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:id="@+id/relativeLayout"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:paddingRight="15dp"
            app:srcCompat="@drawable/logo1"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="9pt"
            android:paddingTop="8dp"
            android:text="ავტომატური შემოწმება"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            app:srcCompat="@drawable/backw"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        app:mtf_image="@drawable/person"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/materialTextField">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ძებნა"
            android:text=""
            android:textColor="#333"
            android:id="@+id/idNumber"
            android:textColorHint="#666"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_search"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_iconPaddingLeft="0dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_focusColor="#313131"
        fancy:fb_iconResource="@drawable/search"
        fancy:fb_radius="54dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    </mehdi.sakout.fancybuttons.FancyButton>


    <Button
        android:id="@+id/clear"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>
