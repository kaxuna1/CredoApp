<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/loantype"
    android:layout_alignStart="@+id/loantype"
    android:layout_below="@+id/loantype">
    <RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/personname"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/loantype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personname"
        android:layout_alignStart="@+id/personname"
        android:layout_below="@+id/personname"
        android:text="TextView" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/personname"
        android:layout_toRightOf="@+id/loantype"
        android:layout_toEndOf="@+id/loantype" />


</RelativeLayout></android.support.v7.widget.CardView>